<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.MissedDetails">

    <RelativeLayout
        android:id="@+id/rel_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/missed_location"
                    android:layout_weight="4"
                    android:layout_marginRight="2dp"
                    android:hint="Location"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:padding="8dp"
                    android:background="@drawable/edit_design"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/location_icon"
                    android:id="@+id/get_location_btn"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_design"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />


            </LinearLayout>

            <EditText
                android:id="@+id/missed_name"
                android:inputType="text"
                android:hint="Name"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/missed_age"
                android:hint="Age"
                android:maxLength="2"
                android:inputType="number"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/missed_radio_group"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@drawable/edit_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/missed_GMale"
                        android:text="Male"
                        android:checked="true"
                        android:onClick="onChecked"
                        android:textColor="@color/hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/missed_GFemale"
                        android:text="Female"
                        android:onClick="onChecked"
                        android:textColor="@color/hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:padding="8dp"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:id="@+id/missed_descrip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_design"
                    android:maxLines="4"
                    android:lines="4"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/user_number"
                    android:hint="Enter your number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edit_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:id="@+id/add_img_btn"
                android:background="@drawable/image_border"
                android:src="@drawable/add_img"
                android:layout_marginTop="10dp"
                android:layout_width="76dp"
                android:layout_height="76dp" />

            <Button
                android:id="@+id/missed_submit_btn"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:layout_marginTop="10sp"
                android:background="@drawable/edit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>